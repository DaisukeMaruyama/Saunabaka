<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="mt-4 mb-1">お問合せフォーム</h3>
      <p class="mb-3">※お問い合わせ内容が確認出来次第、3〜4日以内にご連絡致します。</p>
      <%= form_for(@contact, url: confirm_path) do |f| %>
        <div class="form-group">
          <%= f.label :name, 'お名前*' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control contact-textField' %>
        </div>
        
        <div class="form-group">
          <%= f.label :email, 'メールアドレス*' %>
          <%= f.text_field :email, size: '10x10', class: 'form-control contact-textField' %>
        </div>

        <div class="form-group">
          <%= f.label :message, 'メッセージ*' %>
          <%= f.text_area :message, size: '10x10', class: 'form-control contact-textArea' %>
        </div>

        <div class="mb-4">
          <%= f.submit '入力内容確認' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
