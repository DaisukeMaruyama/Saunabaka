<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="mt-4 mb-1">お問合せフォーム</h3>
      <p class="mb-3">※お問い合わせ内容が確認出来次第、3〜4日以内にご連絡致します。</p>
      <%= form_for(@contact, url: confirm_path) do |f| %>

        <% if @contact.errors.any? %>
          <p style="color: red;">※ <%= @contact.errors.count %>件のエラーがあります。</p>
        <% end %>

        <div class="form-group">
          <%= f.label :name, 'お名前' %><span class="contact-madatory">(必須*)</span>
          <%= f.text_field :name, autofocus: true, class: 'form-control contact-textField' %>
          <div class="feedback" style="color: red;">
            <% if @contact.errors.include?(:name) %>
              <i class="fas fa-exclamation-circle"></i> <%= @contact.errors.full_messages_for(:name).first %>
            <% end %>
          </div>
        </div>
        
        
        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %><span class="contact-madatory">(必須*)</span>
          <%= f.text_field :email, size: '10x10', class: 'form-control contact-textField' %>
          <div class="feedback" style="color: red;">
            <% if @contact.errors.include?(:email) %>
              <i class="fas fa-exclamation-circle"></i> <%= @contact.errors.full_messages_for(:email).first %>
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :message, 'メッセージ' %><span class="contact-madatory">(必須*)</span>
          <%= f.text_area :message, size: '10x10', class: 'form-control contact-textArea' %>
          <div class="feedback" style="color: red;">
            <% if @contact.errors.include?(:message) %>
              <i class="fas fa-exclamation-circle"></i> <%= @contact.errors.full_messages_for(:message).first %>
            <% end %>
          </div>
        </div>

        <div class="mb-4">
          <%= f.submit '入力内容確認' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
