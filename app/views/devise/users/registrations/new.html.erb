<div class="signup-form">
  <h2 class="d-flex justify-content-center mt-5 signup-hedding">新規登録</h2>

  <div class="d-flex justify-content-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field mt-2">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(半角<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "登録", class:"px-1" %>
      </div>
    <% end %>
  </div>  
  <div class="d-flex justify-content-center mt-3 link-to-signin">
    <span class="ml-5">登録がお済みの方=></span><%= link_to 'ログイン', new_user_session_path %>
  </div>
</div>
