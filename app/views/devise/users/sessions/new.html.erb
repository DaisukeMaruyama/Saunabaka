<div class="signup-form">
  <h2 class="d-flex justify-content-center mt-5 login-hedding">ログイン</h2>

  <div class="d-flex justify-content-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mt-2">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "ログイン", class:"px-1" %>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mt-3 link-to-signup">
    <span class="ml-5">登録がお済みでない方=></span><%= link_to '新規登録', 'sign_up' %>
  </div>
</div>