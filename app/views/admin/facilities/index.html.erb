<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
	<% @facilities.each do |facility| %>
		<div class="col">
			<div class="card shadow-sm">
				<%= attachment_image_tag facility, :image, size:"190x225", fallback: "no-image.jpeg", class:"card-img-top", format: "jpeg" %>
				<div class="card-body">
					<p class="card-text"><%= facility.sauna_name %></p>
					<p>室温:<span><%= facility.temperature %>℃</span></p><p>水風呂:<span><%= facility.water %>℃</span></p>
					<div class="d-flex justify-content-between align-items-center">
						<div class="btn-group">
							<button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to '見てみる' , facility_path(facility) %></button>
						</div>
						<small class="text-muted">♡9</small>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>